<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout


        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/shape_round_white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dg_popular_title"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_16"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/dp_10"
                android:text=""/>
            <ImageView
                android:id="@+id/iv_dg_popular_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/close"
                android:layout_alignParentRight="true"
                android:padding="@dimen/dp_10"
                />



        </RelativeLayout>
        <TextView
            android:id="@+id/tv_dg_popular_content"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/_3"
            android:layout_margin="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""/>

<RelativeLayout

    android:layout_marginTop="@dimen/dp_20"
    android:background="@color/f9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_margin="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/_6"
        android:textSize="@dimen/dp_13"
        android:text="是否对你有帮助"/>
    <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
        android:id="@+id/tv_dg_popular_youyong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="有用"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        app:stv_corner="@dimen/dp_50"
        app:stv_solid="@color/home_button"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:drawableLeft="@drawable/rmwt_hand2"
        android:textColor="@color/white"
        />
    <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
        android:id="@+id/tv_dg_popular_meiyong"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_toLeftOf="@+id/tv_dg_popular_youyong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="没用"
        android:layout_centerVertical="true"
        app:stv_corner="@dimen/dp_50"
        app:stv_solid="@color/white"
        app:stv_stroke_color="@color/home_button"
        app:stv_stroke_width="@dimen/dp_1"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_15"
        android:paddingRight="@dimen/dp_15"
        android:drawableLeft="@drawable/rmwt_hand1"
        android:textColor="@color/home_button"
        />




</RelativeLayout>




    </LinearLayout>


</RelativeLayout>