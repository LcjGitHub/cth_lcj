<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_70"
    android:background="@color/white"


    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/iv_item_mha"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:src="@drawable/morentu"
        />
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/iv_item_mha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_mha_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_14"
            android:textColor="@color/_3"

            android:text="互助饭"/>
        <TextView
            android:id="@+id/tv_item_mha_carnum"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/_6"

            android:text="川A12345"/>

    </LinearLayout>
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical"
        android:layout_toLeftOf="@+id/tv_item_mha_cz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_mha_type"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_13"
            android:textColor="@color/home_button"

            android:text="保障中"/>
        <TextView
            android:id="@+id/tv_item_mha_yue"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_12"
            android:textColor="@color/_6"

            android:text="余额：0.00元"/>

    </LinearLayout>

    <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
        android:id="@+id/tv_item_mha_cz"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textSize="@dimen/dp_12"
        app:stv_corner="@dimen/dp_50"
        app:stv_solid="@color/home_button"
        android:paddingBottom="@dimen/dp_5"
        android:paddingTop="@dimen/dp_5"
        android:paddingRight="@dimen/dp_15"
        android:paddingLeft="@dimen/dp_15"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/dp_10"
        android:text="充值"/>









</RelativeLayout>