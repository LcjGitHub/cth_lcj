<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl_find_carmutual"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_find_listpic"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_find_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_16" />

            <TextView
                android:id="@+id/tv_find_cishu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_5"
                android:text=""
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_14" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_find_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/_9"
                android:textSize="@dimen/dp_12" />


        </LinearLayout>

        <ImageView

            android:id="@+id/iv_find_listpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/dp_10"
            android:src="@drawable/huzhu_listpic" />
        <TextView
            android:gravity="center"
            android:id="@+id/tv_find_tianshu"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_35"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/white"
            android:text=""
            />


    </RelativeLayout>



</RelativeLayout>