<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/shape_round_white"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/sp_20"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_350"

        android:orientation="vertical">

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:id="@+id/tv_title_login"
            android:textColor="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务协议及隐私权政策"
            android:layout_marginBottom="20dp"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_240">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/tv_content_login"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:gravity="top"

                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:text="感谢您使用车助宝互助平台！为了让您更加放心的使用我们的产品及服务，请您务必仔细阅读，充分理解协议中的条款内容后再点击同意，以便您能更好的行使个人权利及保护个人信息。

【请您注意】若您不同意以下协议或其中任何条款约定，您可以点击不同意，暂停使用车助宝互助平台的产品和服务。如您点击同意即表示您已阅读并同意《车助宝互助平台服务协议》与《法律声明及隐私权政策》。"
                    android:textColor="@color/black"
                    android:textSize="14dp"/>

                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_log_xy"
                    android:textColor="@color/home_button"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:text="《车助宝互助平台服务协议》"/>
                <TextView
                    android:layout_marginLeft="@dimen/dp_10"
                    android:id="@+id/tv_log_zc"
                    android:textColor="@color/home_button"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:text="《法律声明及隐私权政策》"/>


            </LinearLayout>
        </ScrollView>


        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="30dp"
            android:background="#D9D9D9"/>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_cancel_login"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="不同意"
                android:textColor="@color/black"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/textView10"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#D9D9D9"/>

            <TextView
                android:id="@+id/tv_sure_login"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="同意"
                android:textColor="@color/home_button"
                android:textSize="16dp"/>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>