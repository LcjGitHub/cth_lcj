<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f9"
    android:fitsSystemWindows="true"
    tools:context=".activity.PersonalInformationActivity">
    <com.chetuhui.lcj.chezhubao_x.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar_pi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="个人信息"
        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/back"
        app:leftType="imageButton"

        app:rightType="imageButton"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />
    <LinearLayout
        android:layout_below="@+id/titlebar_pi"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout


            android:id="@+id/rl_pi_tc"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                android:layout_margin="@dimen/dp_10"
                android:text="头像"/>
            <TextView
                android:id="@+id/tv_pi_tc"
                    android:layout_centerVertical="true"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/arrowgo"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                android:layout_margin="@dimen/dp_10"
                android:text=""/>
            <ImageView
                android:id="@+id/iv_pi_tc"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_alignParentRight="true"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/morentu"

                />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_pi_nc"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                android:layout_margin="@dimen/dp_10"
                android:text="昵称"/>
            <TextView
                android:id="@+id/tv_pi_nc"

                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/arrowgo"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                android:layout_margin="@dimen/dp_10"
                android:text=""/>


        </RelativeLayout>
        <RelativeLayout
            android:visibility="gone"
            android:id="@+id/rl_pi_smxx"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                android:layout_margin="@dimen/dp_10"
                android:text="实名信息"/>
            <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
                android:drawablePadding="@dimen/dp_5"

                android:id="@+id/tv_pi_smxx"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/white"
            android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_25"
                app:stv_corner="@dimen/dp_20"
                app:stv_solid="@color/home_button"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingRight="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"

                android:text="未认证"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrowgo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_centerVertical="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_pi_bdsj"
            android:layout_marginTop="@dimen/dp_2"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                android:layout_margin="@dimen/dp_10"
                android:text="绑定手机"/>
            <TextView
                android:id="@+id/tv_pi_bdsj"
                android:drawablePadding="@dimen/dp_5"
                android:drawableRight="@drawable/arrowgo"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                android:layout_margin="@dimen/dp_10"
                android:text=""/>


        </RelativeLayout>




    </LinearLayout>


</RelativeLayout>