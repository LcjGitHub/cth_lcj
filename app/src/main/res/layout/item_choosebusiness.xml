<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_90"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rl_cb_"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_75"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_item_choosebusines"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_60"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/morentu"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_100"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item_choosebusines_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="明伟汽车养护中心（环球中心店）"
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15" />

            <TextView
                android:id="@+id/tv_item_choosebusines_dizhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地址：高新区天府大道1700号"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:id="@+id/tv_item_choosebusines_paidui"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/xzwxsj_wait"
                android:drawablePadding="@dimen/dp_10"
                android:text="当前排队2人"
                android:textColor="@color/home_button"
                android:textSize="@dimen/dp_13" />

        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>