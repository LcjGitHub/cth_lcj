<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fb64"
    tools:context=".activity.CardCouponActivity">

    <com.chetuhui.lcj.chezhubao_x.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar_cc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:centerText="红包卡券"
        app:centerTextColor="@color/white"
        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/whitback"
        app:leftType="imageButton"

        app:rightType="imageButton"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />
    <LinearLayout
        android:layout_below="@+id/titlebar_cc"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabs_cc"
                    android:layout_gravity="center"
                    app:tabIndicatorColor="@color/feea"
                    app:tabSelectedTextColor="@color/fb64"
                    app:tabTextColor="@color/feea"
                    android:layout_width="@dimen/dp_300"
                    app:tabIndicatorHeight="0dp"
                    app:tabBackground="@drawable/tab_background"
                   app:tabRippleColor="@color/transparent"
                    android:background="@drawable/hbkq_switchbg"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </RelativeLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager_cc"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>




</RelativeLayout>