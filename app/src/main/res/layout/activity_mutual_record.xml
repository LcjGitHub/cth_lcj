<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/f9"
    tools:context=".activity.MutualRecordActivity">
    <com.chetuhui.lcj.chezhubao.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar_mr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="互助记录"
        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/back"

        app:leftType="imageButton"

        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />
    <LinearLayout
        android:layout_below="@+id/titlebar_mr"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="救助状态"
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="待确认"
                android:textColor="@color/home_button"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_115"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="救助车牌号："
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="川A15624"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_115"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="救助单名称："
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99元享2次1000元以下维修"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_115"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO.2329342344"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_115"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>







    </LinearLayout>



</RelativeLayout>