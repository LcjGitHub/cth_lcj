<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/f9"
    tools:context=".activity.AccountDetailsActivity">

    <com.chetuhui.lcj.chezhubao_x.view.titlebar.CommonTitleBar
        android:background="@color/home_button"
        android:paddingTop="@dimen/dp_15"
        android:id="@+id/titlebar_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="账户明细"
        app:centerTextColor="@color/white"

        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/whitback"
        app:leftType="imageButton"
        app:rightType="textView"
        app:rightText=""
        app:rightTextSize="@dimen/dp_12"
        app:rightTextColor="@color/black"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/titlebar_ad"
        android:id="@+id/rv_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>



</RelativeLayout>