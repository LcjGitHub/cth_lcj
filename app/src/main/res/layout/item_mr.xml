<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingTop="@dimen/dp_5"
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="救助状态"
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_item_mr_jzzt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/home_button"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_115"
                android:layout_marginTop="@dimen/dp_10"
                />
            <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
                android:id="@+id/tv_item_mr_but"
                android:visibility="gone"
                android:layout_marginRight="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="更换维修商家"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/white"
                app:stv_corner="@dimen/dp_30"
                app:stv_solid="@color/home_button"
                android:paddingTop="@dimen/dp_5"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_10"
                android:paddingRight="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="救助车牌号："
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_item_mr_chepai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="川A15624"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_115"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="救助单名称："
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_item_mr_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99元享2次1000元以下维修"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_115"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>
        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                />
            <TextView
                android:id="@+id/tv_item_mr_ddh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO.2329342344"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_115"
                android:layout_marginTop="@dimen/dp_10"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>