<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="@dimen/dp_90">
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_90">
        <ImageView
            android:layout_marginLeft="@dimen/dp_30"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dp_60"
            android:layout_height="@dimen/dp_60"
            android:id="@+id/iv_item_amc"
            android:src="@drawable/ic_clear"
            />
        <LinearLayout
            android:layout_marginLeft="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_item_amc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_amc_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:text="川 A**154 "/>

            <TextView
                android:id="@+id/tv_item_amc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_13"
                android:text="雪铁龙"/>


        </LinearLayout>
        <ImageView
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrowgo"/>

    </RelativeLayout>


</RelativeLayout>