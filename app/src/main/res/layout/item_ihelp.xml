<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/dp_90">
    <RelativeLayout
        android:visibility="visible"
        android:background="@drawable/shape_rectangle_5_white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70">
        <ImageView
            android:id="@+id/iv_item_ihelp"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:src="@drawable/cheliangtu"/>
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_80"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_ihelp_chepai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="川A***12"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                android:layout_marginBottom="@dimen/dp_5"
                />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_item_ihelp_cishu"
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余救助次数：2"
                android:textSize="@dimen/dp_13"
                android:textColor="@color/_6"
                />

        </LinearLayout>
        <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
            android:id="@+id/tv_item_ihelp_wyjz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我要救助"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_20"
            android:textColor="@color/home_button"
            android:textSize="@dimen/dp_14"
            app:stv_corner="@dimen/dp_20"
            app:stv_solid="@color/d6f3"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:paddingRight="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_10"
            />

    </RelativeLayout>


</RelativeLayout>