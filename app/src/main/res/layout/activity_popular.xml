<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".activity.PopularActivity">
    <com.chetuhui.lcj.chezhubao.view.titlebar.CommonTitleBar
        android:background="@color/white"
        android:id="@+id/titlebar_popular"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="热门问题"
        app:centerTextColor="@color/black"

        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/back"
        app:leftType="imageButton"
        app:rightType="textView"

        app:rightTextSize="@dimen/dp_12"
        app:rightTextColor="@color/black"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />
    <LinearLayout
        android:layout_below="@+id/titlebar_popular"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_3"
                android:text="基金池是什么"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrowgo"/>
            <View
                android:background="@color/e4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_3"
                android:text="车助宝互助平台有风险吗"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrowgo"/>
            <View
                android:background="@color/e4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_3"
                android:text="如何退款"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrowgo"/>
            <View
                android:background="@color/e4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>
        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_45">
            <TextView
                android:layout_centerVertical="true"
                android:textSize="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_3"
                android:text="与普通车辆保险有何区别"/>
            <ImageView
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/arrowgo"/>
            <View
                android:background="@color/e4"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>

    </LinearLayout>

<LinearLayout
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <com.chetuhui.lcj.chezhubao.view.supertextview.SuperTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="联系客服"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/dp_50"
        android:layout_marginRight="@dimen/dp_50"
        android:textColor="@color/home_button"
        android:padding="@dimen/dp_10"
        app:stv_stroke_color="@color/home_button"
        app:stv_stroke_width="@dimen/dp_1"
        android:textSize="@dimen/dp_15"
        app:stv_corner="@dimen/dp_40"
        android:gravity="center"
        />
    <TextView
        android:layout_margin="@dimen/dp_10"
        android:textSize="@dimen/dp_13"
        android:textColor="@color/_9"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="求助客服，获得快速解答"/>

</LinearLayout>




</RelativeLayout>