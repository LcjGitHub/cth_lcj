<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:stv_solid="@color/d6"
        app:stv_corner="@dimen/dp_10"
        android:padding="@dimen/dp_5"
        android:id="@+id/tv_item_msg_time"
        android:layout_margin="@dimen/dp_10"
        android:gravity="center"
        android:textSize="@dimen/dp_12"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:text="121122"/>
    <RelativeLayout
        android:background="@color/white"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_below="@+id/tv_item_msg_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_msg_title"
            android:textColor="@color/_3"
            android:padding="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12222222"
            android:textSize="@dimen/dp_15"

            />

    </RelativeLayout>

</RelativeLayout>