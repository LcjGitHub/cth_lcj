<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    tools:context=".activity.JoinActivity">

    <com.chetuhui.lcj.chezhubao.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="申请加入"
        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/back"
        app:leftType="imageButton"

        app:rightType="imageButton"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/rl_join_r2"
        android:layout_below="@+id/titlebar_join">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout

                android:id="@+id/rl_join_r1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/titlebar_join"
                android:background="@drawable/sqjr_image">

                <TextView
                    android:id="@+id/tv_join_jijinchijine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_45"
                    android:layout_marginTop="@dimen/dp_45"
                    android:text="￥1234567"
                    android:textColor="@color/white"

                    android:textSize="@dimen/dp_25"
                    android:textStyle="bold" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"

                android:text="互助方案"
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="@dimen/dp_5"
                    android:id="@+id/tv_join_fangan99"
                    android:layout_width="@dimen/dp_0"
                    android:background="@drawable/shape_rectangle_5_white_b"

                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:layout_margin="@dimen/dp_5"
                    android:id="@+id/tv_join_fangan199"
                    android:layout_width="@dimen/dp_0"
                    android:background="@drawable/shape_rectangle_5_white_b"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_15" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <TextView
                    android:layout_margin="@dimen/dp_5"
                    android:id="@+id/tv_join_fangan399"
                    android:layout_width="@dimen/dp_0"
                    android:background="@drawable/shape_rectangle_5_white_b"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_15" />

                <TextView
                    android:layout_margin="@dimen/dp_5"
                    android:id="@+id/tv_join_fangan599"
                    android:layout_width="@dimen/dp_0"
                    android:background="@drawable/shape_rectangle_5_white_b"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_15" />


            </LinearLayout>

            <TextView

                android:layout_marginTop="@dimen/dp_15"
                android:id="@+id/tv_join_fangan799"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center"
                android:background="@drawable/shape_rectangle_5_white_b"
                android:text=""
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"

                android:text="选择互助方案"
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:orientation="horizontal">

                <com.chetuhui.lcj.chezhubao.view.supertextview.SuperTextView
                    android:id="@+id/tv_join_xuanze99"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="99/年"
                    android:textColor="@color/home_button"
                    android:textSize="@dimen/dp_14"
                    app:stv_corner="40dp"
                    app:stv_solid="@color/d6f3"
                    app:stv_stroke_width="@dimen/dp_1"
                    app:stv_stroke_color="@color/home_button" />


                <com.chetuhui.lcj.chezhubao.view.supertextview.SuperTextView
                    android:id="@+id/tv_join_xuanze199"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    app:stv_stroke_width="@dimen/dp_1"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="199/年"
                    android:textColor="@color/home_button"
                    android:textSize="@dimen/dp_14"
                    app:stv_corner="40dp"
                    app:stv_solid="@color/d6f3"
                    app:stv_stroke_color="@color/home_button" />


                <com.chetuhui.lcj.chezhubao.view.supertextview.SuperTextView
                    android:id="@+id/tv_join_xuanze399"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="399/年"
                    app:stv_stroke_width="@dimen/dp_1"
                    android:textColor="@color/home_button"
                    android:textSize="@dimen/dp_14"
                    app:stv_corner="40dp"
                    app:stv_solid="@color/d6f3"
                    app:stv_stroke_color="@color/home_button" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_15"
                android:orientation="horizontal">

                <com.chetuhui.lcj.chezhubao.view.supertextview.SuperTextView
                    android:id="@+id/tv_join_xuanze599"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5"
                    android:text="599/年"
                    app:stv_stroke_width="@dimen/dp_1"
                    android:textColor="@color/home_button"
                    android:textSize="@dimen/dp_14"
                    app:stv_corner="40dp"
                    app:stv_solid="@color/d6f3"
                    app:stv_stroke_color="@color/home_button" />


                <com.chetuhui.lcj.chezhubao.view.supertextview.SuperTextView
                    android:id="@+id/tv_join_xuanze799"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    app:stv_stroke_width="@dimen/dp_1"
                    android:paddingTop="@dimen/dp_5"
                    android:text="799/年"
                    android:textColor="@color/home_button"
                    android:textSize="@dimen/dp_14"
                    app:stv_corner="40dp"
                    app:stv_solid="@color/d6f3"
                    app:stv_stroke_color="@color/home_button" />


                <com.chetuhui.lcj.chezhubao.view.supertextview.SuperTextView
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingTop="@dimen/dp_5" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="@dimen/dp_25"
                android:layout_marginLeft="@dimen/dp_15"
                android:layout_marginRight="@dimen/dp_15"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/cb_join_tongyi"
                    style="@style/CustomCheckBoxTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="同意"
                    android:textColor="@color/_6"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/tv_join_xuzhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="《互助平台须知》"
                    android:textColor="@color/home_button"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/tv_join_tiaokuan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="《平台条款》"
                    android:textColor="@color/home_button"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:id="@+id/tv_join_xieyi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="《用户协议》"
                    android:textColor="@color/home_button"
                    android:textSize="@dimen/dp_13" />


            </LinearLayout>

            <ImageView
                android:id="@+id/iv_join_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"


                />


        </LinearLayout>

    </ScrollView>


    <RelativeLayout
        android:id="@+id/rl_join_r2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_10"
            android:text="已选:"
            android:textColor="@color/_6"

            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/tv_join_yixuanjine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dp_70"
            android:text="￥99"
            android:textColor="@color/ff73"
            android:textSize="@dimen/dp_18"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/tv_join_yixuanjine"
            android:text=" /年"
            android:textColor="@color/_6"
            android:textSize="@dimen/dp_18" />

        <com.chetuhui.lcj.chezhubao.view.supertextview.SuperTextView
            android:id="@+id/tv_join_woyaojiaru"
            android:layout_width="@dimen/dp_150"
            android:layout_height="@dimen/dp_40"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="我要加入"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            app:stv_corner="40dp"
            app:stv_solid="@color/home_button" />


    </RelativeLayout>


</RelativeLayout>