<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:background="@color/fb64">

    <LinearLayout


        android:layout_margin="@dimen/dp_18"
        android:background="@drawable/shape_rectangle_5_white"
        android:id="@+id/pic_null"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_400"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_15"
            android:textColor="@color/fb64"
            android:text="——  您的红包  ——"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_centerHorizontal="true"
                android:id="@+id/iv_amc_sqt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/tv_zwhb"
                android:layout_gravity="center"
                android:src="@drawable/pic"
                />

            <TextView

                android:id="@+id/tv_zwhb"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无红包哦~"
                android:textColor="#ffb5b5b5"
                android:textSize="15sp"
                android:layout_marginTop="@dimen/dp_13"/>
        </RelativeLayout>



    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_fragment_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:background="@drawable/shape_rectangle_5_white"
        android:paddingBottom="@dimen/dp_10"
        android:paddingTop="@dimen/dp_10">


    </android.support.v7.widget.RecyclerView>


</RelativeLayout>