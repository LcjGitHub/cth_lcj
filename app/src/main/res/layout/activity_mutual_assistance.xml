<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/f9"
    tools:context=".activity.MutualAssistanceActivity">

    <com.chetuhui.lcj.chezhubao_x.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar_ma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="互助说明"
        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/back"

        app:leftType="imageButton"
        app:rightType="textView"
        app:rightText="互助记录"

        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />

    <ScrollView
        android:layout_below="@+id/titlebar_ma"
        android:layout_above="@+id/tv_ma_ljsq"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
      >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:text="遇到以下情况您可以申请救助："
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="1、Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aenean euismod bibendum laoreet."
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="2、et viverra justo commodo. Proin sodales pulvinar sic tempor. Sociis natoque penatibus"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="3、 Nam fermentum, nulla luctus pharetra vulputate, felis tellus mollis orci, sed rhoncus pronin"
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dp_15"
                android:layout_marginLeft="@dimen/dp_15"
                android:text="4、sapien nunc accuan eget."
                android:textColor="@color/_6"
                android:textSize="@dimen/dp_13" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_15"
                android:text="互助步骤如下："
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_15"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:drawableLeft="@drawable/hzsm_write"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="填写信息"
                    android:textColor="@color/home_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="1、在线填写车辆受损情况"
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_15"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_65"
                    android:text="请在线填写简要信息……"
                    android:textColor="@color/_6"
                    android:textSize="@dimen/dp_13"


                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:drawableLeft="@drawable/hzsm_upimage"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="上传照片"
                    android:textColor="@color/home_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="2、在线提交车辆受损照片"
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_15"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_65"
                    android:text="系统会根据您提交的信息查询可为您提供维修的商家……"
                    android:textColor="@color/_6"
                    android:textSize="@dimen/dp_13"


                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:drawableLeft="@drawable/hzsm_shop"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="选择商家"
                    android:textColor="@color/home_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="3、选择维修商家"
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_15"


                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_65"
                    android:text="选择好维修商家后……"
                    android:textColor="@color/_6"
                    android:textSize="@dimen/dp_13"


                    />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:drawableLeft="@drawable/hzsm_maintain"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="维修"
                    android:textColor="@color/home_button" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_40"
                    android:layout_marginTop="@dimen/dp_40"
                    android:text="4、车助宝审核材料并通过后您即可去您选择的商家进行维修"
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_15"


                    />


            </RelativeLayout>


        </LinearLayout>

    </ScrollView>



<TextView
    android:id="@+id/tv_ma_ljsq"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="立即申请"
    android:textColor="@color/white"
    android:textSize="@dimen/dp_15"
    android:background="@color/home_button"
    android:gravity="center"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:layout_alignParentBottom="true"
    />
</RelativeLayout>