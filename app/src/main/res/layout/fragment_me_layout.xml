<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f9"

    android:orientation="vertical">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/me_bg">

        <com.chetuhui.lcj.chezhubao_x.view.titlebar.CommonTitleBar
            android:id="@+id/titlebar_me"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_15"
            app:centerText="我的"
            app:centerType="textView"
            app:centerTextColor="@color/white"
            app:fillStatusBar="false"
            app:leftText=""
            app:leftTextColor="@color/white"
            app:leftTextSize="@dimen/dp_20"
            app:leftType="textView"
            app:rightImageResource="@drawable/home_message"
            app:rightType="imageButton"
            app:showBottomLine="false"
            app:titleBarColor="@color/transparent" />
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_70">

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_below="@+id/titlebar_me"
                android:layout_marginLeft="@dimen/dp_13"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:src="@drawable/morentu"
                android:id="@+id/iv_me_tx"
                />
            <LinearLayout
                android:layout_marginLeft="@dimen/dp_18"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_me_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_me_ph"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_13" />

                <TextView
                    android:visibility="visible"
                    android:id="@+id/tv_me_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/dp_12" />

            </LinearLayout>
            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <View
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_toLeftOf="@+id/ll_me_yue"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="match_parent"
                    android:background="@color/white"

                    />
                <LinearLayout
                    android:id="@+id/ll_me_yue"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_gravity="right"
                        android:textSize="@dimen/dp_13"
                        android:layout_marginRight="@dimen/dp_10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:text="互助账户余额"/>
                    <LinearLayout
                        android:layout_gravity="right"

                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView

                            android:id="@+id/tv_me_yue"

                            android:gravity="right"
                            android:textSize="@dimen/dp_22"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text=""/>

                        <TextView

                            android:layout_gravity="center_vertical"
                            android:textSize="@dimen/dp_13"
                            android:layout_marginRight="@dimen/dp_10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:text="元"/>


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>





        </LinearLayout>





    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_15"
                    android:background="@color/white"
                    android:paddingBottom="@dimen/dp_5"
                    android:paddingLeft="@dimen/dp_20"
                    android:text="我的订单"
                    android:textColor="@color/_3"
                    android:textSize="@dimen/dp_18" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_0_5"
                    android:background="@color/e4" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_me_dfk"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableTop="@drawable/user_dfk"
                        android:gravity="center"
                        android:text="待付款"
                        android:textColor="@color/_6"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/tv_me_dsy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableTop="@drawable/user_dsy"
                        android:gravity="center"
                        android:text="待使用"
                        android:textColor="@color/_6"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/tv_me_dpj"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableTop="@drawable/user_dpj"
                        android:gravity="center"
                        android:text="待评价"
                        android:textColor="@color/_6"
                        android:textSize="@dimen/dp_14" />

                    <TextView
                        android:id="@+id/tv_me_tuikuan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_weight="1"
                        android:drawablePadding="@dimen/dp_10"
                        android:drawableTop="@drawable/user_tuikuan"
                        android:gravity="center"
                        android:text="售后/退款"
                        android:textColor="@color/_6"
                        android:textSize="@dimen/dp_14" />


                </LinearLayout>


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_15"
                android:background="@color/white"
                android:paddingBottom="@dimen/dp_5"
                android:paddingLeft="@dimen/dp_20"
                android:text="我的服务"
                android:textColor="@color/_3"
                android:textSize="@dimen/dp_18" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:background="@color/e4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tv_me_grxx"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"

                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@drawable/user_grxx"
                    android:gravity="center"
                    android:text="个人信息"
                    android:textColor="@color/_6"
                    android:textSize="@dimen/dp_14" />

                <TextView

                    android:id="@+id/tv_me_hzzh"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@drawable/user_bag1"
                    android:gravity="center"
                    android:text="互助账户"
                    android:textColor="@color/_6"
                    android:textSize="@dimen/dp_14" />

                <TextView
                    android:id="@+id/tv_me_kajuan"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@drawable/user_hongbao"
                    android:gravity="center"
                    android:text="红包卡券"
                    android:textColor="@color/_6"
                    android:textSize="@dimen/dp_14" />


                <TextView
                    android:id="@+id/tv_me_haoyou"
                    android:layout_width="@dimen/dp_0"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/dp_10"
                    android:drawableTop="@drawable/user_yqhy"
                    android:gravity="center"
                    android:text="邀请好友"
                    android:textColor="@color/_6"
                    android:textSize="@dimen/dp_14" />


            </LinearLayout>
            <RelativeLayout
                android:id="@+id/rl_me_zhanghao"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_0_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/_3"
                    android:text="账号与安全"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrowgo"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_me_lianxi"
               android:background="@color/white"
               android:layout_marginTop="@dimen/dp_0_5"
               android:layout_width="match_parent"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_margin="@dimen/dp_15"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:textSize="@dimen/dp_15"
                   android:textColor="@color/_3"
                   android:text="联系客服"
                   android:textStyle="bold"
                   />
               <ImageView
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"
                   android:layout_marginRight="@dimen/dp_15"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:src="@drawable/arrowgo"
                   />

           </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_me_yijian"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_0_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/_3"
                    android:text="意见反馈"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrowgo"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_me_jiancha"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_0_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/_3"
                    android:text="检查更新"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrowgo"
                    />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/rl_me_about"
                android:background="@color/white"
                android:layout_marginTop="@dimen/dp_0_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_margin="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/dp_15"
                    android:textColor="@color/_3"
                    android:text="关于我们"
                    android:textStyle="bold"
                    />
                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrowgo"
                    />

            </RelativeLayout>

            <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
                android:layout_marginTop="@dimen/dp_10"
                android:id="@+id/tv_me_tuichu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/dp_50"
                android:layout_marginLeft="@dimen/dp_50"
                android:paddingTop="@dimen/dp_10"
                android:paddingBottom="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:text="退出登录"
                android:textColor="@color/white"
                app:stv_corner="@dimen/dp_30"
                app:stv_solid="@color/home_button"
                />



        </LinearLayout>
    </ScrollView>




</LinearLayout>