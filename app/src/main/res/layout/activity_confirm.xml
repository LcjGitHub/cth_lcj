<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/f9"
    tools:context=".activity.ConfirmActivity">

    <com.chetuhui.lcj.chezhubao_x.view.titlebar.CommonTitleBar
        android:background="@color/white"
        android:id="@+id/titlebar_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="确认互助单"
        app:centerTextColor="@color/black"

        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/back"
        app:leftType="imageButton"
        app:rightType="textView"

        app:rightTextSize="@dimen/dp_12"
        app:rightTextColor="@color/black"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />
    <LinearLayout
        android:layout_below="@+id/titlebar_confirm"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_3"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:text="互助单类别"/>
            <TextView
                android:id="@+id/tv_confirm_leibie"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_6"
                android:drawableRight="@drawable/arrowgo"
                android:drawablePadding="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:text="请选择"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/e4"/>


        </RelativeLayout>
        <RelativeLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_3"
                android:textStyle="bold"
                android:textSize="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:text="互助车数量"/>
            <TextView
                android:id="@+id/tv_confirm_shuliang"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/_6"
                android:drawableRight="@drawable/arrowgo"
                android:drawablePadding="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:layout_margin="@dimen/dp_10"
                android:text="0辆"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_0_5"
                android:layout_alignParentBottom="true"
                android:background="@color/e4"/>


        </RelativeLayout><RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_3"
            android:textStyle="bold"
            android:textSize="@dimen/dp_15"
            android:layout_margin="@dimen/dp_10"
            android:text="互助单价"/>
        <TextView
            android:id="@+id/tv_confirm_danjia"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_6"

            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:layout_margin="@dimen/dp_10"
            android:text="￥00.00"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:background="@color/e4"/>


    </RelativeLayout><RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_3"
            android:textStyle="bold"
            android:textSize="@dimen/dp_15"
            android:layout_margin="@dimen/dp_10"
            android:text="红包抵扣"/>
        <TextView
            android:id="@+id/tv_confirm_hongbao"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_6"

            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:layout_margin="@dimen/dp_10"
            android:text="选择红包"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:background="@color/e4"/>


    </RelativeLayout><RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_3"
            android:textStyle="bold"
            android:textSize="@dimen/dp_15"
            android:layout_margin="@dimen/dp_10"
            android:text="总计金额"/>
        <TextView
            android:id="@+id/tv_confirm_zongji"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/_6"

            android:drawablePadding="@dimen/dp_10"
            android:textSize="@dimen/dp_15"
            android:layout_margin="@dimen/dp_10"
            android:text="￥00.00"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_alignParentBottom="true"
            android:background="@color/e4"/>


    </RelativeLayout>
    </LinearLayout>



    <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
        android:layout_width="match_parent"
        android:id="@+id/tv_confirm_quzhifu"
        android:layout_height="wrap_content"
        android:text="去支付"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15"
        android:gravity="center"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        app:stv_solid="@color/home_button"
        />

</RelativeLayout>