<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/f9"
    tools:context=".activity.TxActivity">
    <ImageView
        android:id="@+id/iv_tx"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"
        android:src="@drawable/tx"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/dp_30"



        />
    <RelativeLayout
        android:gravity="center_horizontal"
        android:layout_below="@+id/iv_tx"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
            android:id="@+id/tv_tx_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            app:stv_corner="@dimen/dp_10"
            app:stv_solid="@color/home_button"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"


            />
        <com.chetuhui.lcj.chezhubao_x.view.supertextview.SuperTextView
            android:id="@+id/tv_tx_qd"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_toRightOf="@+id/tv_tx_qx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="@dimen/dp_15"
            app:stv_corner="@dimen/dp_10"
            app:stv_solid="@color/home_button"
            android:paddingBottom="@dimen/dp_5"
            android:paddingTop="@dimen/dp_5"
            android:paddingRight="@dimen/dp_15"
            android:paddingLeft="@dimen/dp_15"


            />


    </RelativeLayout>



</RelativeLayout>