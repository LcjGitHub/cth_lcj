<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context=".activity.CityActivity">
    <com.chetuhui.lcj.chezhubao_x.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_15"
        app:centerText="城市定位"
        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/back"
        app:leftType="imageButton"

        app:rightType="imageButton"
        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />
    <TextView
        android:drawableLeft="@drawable/dingwei_dw"
        android:drawablePadding="@dimen/dp_5"
        android:layout_margin="@dimen/dp_10"
        android:id="@+id/tv_city"
        android:layout_below="@+id/titlebar_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/dp_15"
        android:textColor="@color/_3"
        />


    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/tv_city"
        android:id="@+id/rv_city_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <com.chetuhui.lcj.chezhubao_x.view.sort.WaveSideBar
        android:id="@+id/sbvside_view"
        android:layout_below="@+id/titlebar_city"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:textSize="@dimen/dp_10"

        app:textColor="#13d2be"



        app:radius="20dp"
        />
</RelativeLayout>