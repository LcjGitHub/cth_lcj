<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/rl1"
        android:background="@color/f6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_item_ad_title_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:text="今天"
            android:textColor="@color/black"
            android:textSize="@dimen/dp_13" />
        <RelativeLayout
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_below="@+id/tv_item_ad_title_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_item_ad_title_cz"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/_6"
                android:text="充值：0.00元"/>
            <TextView
                android:id="@+id/tv_item_ad_title_hz"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/_6"
                android:text="充值：0.00元"/>

            <TextView
                android:id="@+id/tv_item_ad_title_ft"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/dp_11"
                android:layout_marginLeft="@dimen/dp_10"
                android:textColor="@color/_6"
                android:text="充值：0.00元"/>


        </RelativeLayout>

    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_below="@+id/rl1"
        android:id="@+id/rv_item_ad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    </android.support.v7.widget.RecyclerView>



</RelativeLayout>