<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/f9"
    tools:context=".activity.BasicInformationActivity">

    <com.chetuhui.lcj.chezhubao_x.view.titlebar.CommonTitleBar
        android:id="@+id/titlebar_bi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:centerText="填写基本信息"
        app:centerType="textView"
        app:fillStatusBar="false"
        app:leftImageResource="@drawable/back"

        app:leftType="imageButton"

        app:showBottomLine="false"
        app:titleBarColor="@color/transparent" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/titlebar_bi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout

                android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车牌号"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                />
            <EditText
                android:id="@+id/et_bi_chepaihao"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="请输入"
                android:background="@color/transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_10"
                />
            <View
                android:background="@color/e4"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>
        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系电话"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                />
            <EditText
                android:id="@+id/et_bi_lxdh"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="请输入"
                android:text=""
                android:background="@color/transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/dp_10"
                android:maxLength="11"
                android:inputType="number"
                />
            <View
                android:background="@color/e4"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>

        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车辆损坏位置"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                />
            <TextView
                android:id="@+id/tv_bi_weizhi"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_10"

                android:text="请选择"
                android:background="@color/transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/home_button"


                />
            <View
                android:background="@color/e4"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>

        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计维修时间"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                />
            <TextView
                android:id="@+id/tv_bi_shijian"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="请选择"
                android:background="@color/transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/home_button"
                android:padding="@dimen/dp_10"
                />
            <View
                android:background="@color/e4"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>
        <RelativeLayout

            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="预计维修时间段"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                />
            <TextView
                android:id="@+id/tv_bi_shijianduan"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="请输入"
                android:background="@color/transparent"
                android:layout_alignParentRight="true"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/home_button"
                android:padding="@dimen/dp_10"
                />
            <View
                android:background="@color/e4"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="请填写具体车辆损坏情况"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/dp_15"
                android:textColor="@color/_3"
                />
            <View
                android:background="@color/e4"
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_height="@dimen/dp_0_5"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@drawable/shape_rectangle_5_verification_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_90">
            <EditText
                android:id="@+id/et_bi_qingkuang"
                android:layout_margin="@dimen/dp_5"
                android:background="@color/transparent"
                android:textSize="@dimen/dp_13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="请详细填写车辆当前状况,不超过200字"
                />

        </RelativeLayout>




    </LinearLayout>
    <TextView
        android:id="@+id/tv_bi_xyb"
        android:layout_alignParentBottom="true"
        android:paddingTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_10"
        android:background="@color/home_button"
        android:textSize="@dimen/dp_15"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="下一步"/>


</RelativeLayout>